<Window
    x:Class="TheTonyButton.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TheTonyButton"
    mc:Ignorable="d"
    Title="The Tony Button"
    Height="720"
    Width="1280"
    WindowState="Maximized"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard
            x:Key="Juggling">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image1">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image2">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image3">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image4">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image5">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.LayoutTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.LayoutTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image1">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.LayoutTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image2">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.LayoutTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image3">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.LayoutTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image4">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(FrameworkElement.LayoutTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="image5">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="JugglingBalls">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:4"
                    Value="180" />
                <EasingDoubleKeyFrame
                    KeyTime="0:0:8"
                    Value="360" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard
            x:Key="MoveToTop">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                Storyboard.TargetName="image">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-176" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                Storyboard.TargetName="image">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-316" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                Storyboard.TargetName="image1">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-152" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                Storyboard.TargetName="image1">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-80" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                Storyboard.TargetName="image2">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-72" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                Storyboard.TargetName="image2">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-48" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                Storyboard.TargetName="image3">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-48" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                Storyboard.TargetName="image3">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-44" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                Storyboard.TargetName="image4">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-148" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                Storyboard.TargetName="image4">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="4" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                Storyboard.TargetName="image5">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="136" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)"
                Storyboard.TargetName="image5">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="-300" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                Storyboard.TargetName="JugglingBalls">
                <EasingDoubleKeyFrame
                    KeyTime="0:0:0.2"
                    Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger
            RoutedEvent="FrameworkElement.Loaded" />
    </Window.Triggers>
    <Grid>
        <Image
            Height="220"
            Margin="0"
            VerticalAlignment="Center"
            SnapsToDevicePixels="True"
            Source="Assets/TonyHead.png"
            HorizontalAlignment="Center" />
        <Canvas
            x:Name="JugglingBalls"
            Margin="300,107,300,246"
            RenderTransformOrigin="0.494,0.727">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Canvas.RenderTransform>
            <Image
                x:Name="image"
                HorizontalAlignment="Left"
                Height="100"
                VerticalAlignment="Top"
                Width="100"
                Source="Assets/SlackBall.png"
                RenderTransformOrigin="0.5,0.5"
                Canvas.Top="259">
                <Image.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.LayoutTransform>
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image
                x:Name="image1"
                HorizontalAlignment="Left"
                Height="100"
                VerticalAlignment="Top"
                Width="100"
