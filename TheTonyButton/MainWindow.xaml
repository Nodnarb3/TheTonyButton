                </Image.RenderTransform>
            </Image>
            <Image
                x:Name="image4"
                Height="100"
                VerticalAlignment="Top"
                Source="Assets/SlackBall.png"
                HorizontalAlignment="Left"
                Width="100"
                RenderTransformOrigin="0.5,0.5"
                Canvas.Left="522"
                Canvas.Top="101">
                <Image.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.LayoutTransform>
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Image
                x:Name="image5"
                Height="100"
                VerticalAlignment="Top"
                Source="Assets/SlackBall.png"
                HorizontalAlignment="Left"
                Width="100"
                RenderTransformOrigin="0.5,0.5"
                Canvas.Left="572"
                Canvas.Top="259">
                <Image.LayoutTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
