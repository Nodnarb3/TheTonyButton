<Window
    x:Class="TheTonyButton.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TheTonyButton"
    mc:Ignorable="d"
    Title="The Tony Button"
    Height="720"
    Width="1280"
    WindowState="Maximized"
    WindowStyle="None"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard x:Key="Juggling" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="JugglingBalls">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="180"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="360"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MoveToTop"/>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource Juggling}"/>
            <BeginStoryboard Storyboard="{StaticResource MoveToTop}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Image
            Height="220"
            Margin="0"
            VerticalAlignment="Center"
            SnapsToDevicePixels="True"
            Source="Assets/TonyHead.png"
            HorizontalAlignment="Center" />
        <Canvas
            x:Name="JugglingBalls"
            RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <Image
                Height="100"
                Canvas.Left="-225"
                Canvas.Top="-213"
                Width="100"
                Source="Assets/SlackBall.png" />
            <Image
                Height="100"
                Canvas.Left="120"
                Canvas.Top="-213"
                Width="100"
                Source="Assets/SlackBall.png" />
            <Image
                Height="100"
                Canvas.Left="-225"
                Canvas.Top="111"
                Width="100"
                Source="Assets/SlackBall.png" />
            <Image
                Height="100"
                Canvas.Left="-300"
                Canvas.Top="-51"
                Width="100"
                Source="Assets/SlackBall.png" />
            <Image
                Height="100"
                Canvas.Left="195"
                Canvas.Top="-51"
                Width="100"
                Source="Assets/SlackBall.png" />
            <Image
                Height="100"
                Canvas.Left="120"
                Canvas.Top="111"
                Width="100"
                Source="Assets/SlackBall.png" />
            <Image
                Height="100"
                Canvas.Left="-52"
                Canvas.Top="186"
                Width="100"
                Source="Assets/SlackBall.png"
                RenderTransformOrigin="0.5,0.5" />
            <Image
                Height="100"
                Canvas.Left="-52"
                Canvas.Top="-288"
                Width="100"
                Source="Assets/SlackBall.png"
                RenderTransformOrigin="0.5,0.5" />
        </Canvas>

    </Grid>
</Window>
